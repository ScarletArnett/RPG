<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:columnCount="15" android:rowCount="18" android:id="@+id/layout_creation">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hero_selection" android:layout_x="165dp" android:layout_y="227dp"
    />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/right_arrow" android:layout_x="249dp" android:layout_y="232dp" android:text=">"
            android:background="@android:color/transparent"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/left_arrow" android:layout_x="74dp" android:layout_y="230dp" android:text="&lt;"
            android:background="@android:color/transparent"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT"
            android:id="@+id/select_hero" android:layout_x="145dp" android:layout_y="469dp"/>
    <EditText
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/hero_name" android:layout_x="171dp" android:layout_y="363dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Select your name"
            android:id="@+id/select_hero_name" android:layout_x="27dp" android:layout_y="381dp"/>
</AbsoluteLayout>